<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<ImageView
    android:id="@+id/imageView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.5"
    android:src="@drawable/bg2" />

<LinearLayout
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/gradient_view"
    android:weightSum="3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/optbcakbtn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:layout_weight="1"
        android:contentDescription="@string/back"
        android:src="@drawable/back_arrow" />

    <TextView
        android:id="@+id/ScreenNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1/4"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/set_timer"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/timer_round"
            android:backgroundTint="#ffffff"
            android:gravity="center"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>


<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="120dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/questionText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/option_button"
            android:elevation="4dp"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text=""
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnA"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/option_button"
            android:elevation="4dp"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text=""
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnB"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/option_button"
            android:elevation="4dp"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text=""
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnD"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnC"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/option_button"
            android:elevation="4dp"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:text=""
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <!--            <Button-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_below="@+id/btnD"-->
        <!--                android:layout_alignParentStart="true"-->
        <!--                android:layout_marginTop="15dp"-->
        <!--                android:background="@drawable/mcqs_next_button_style"-->
        <!--                android:elevation="2dp"-->
        <!--                android:paddingLeft="15dp"-->
        <!--                android:paddingRight="15dp"-->

        <!--                android:text="view solution"-->
        <!--                android:textColor="#ffffff"-->
        <!--                android:textSize="13sp"-->
        <!--                android:textStyle="bold" />-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnD"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mcqs_next_button_style"
            android:elevation="2dp"
            android:id="@+id/optbtn"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="view next"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#BE3239"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="18dp"

        android:gravity="center"
        android:text="We are working 24/7 on creating new content.\nYou will be notified once we upload new Past Papers."
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/crossIv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/cross_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="290dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/empty_image_white_bg"

        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />
</androidx.constraintlayout.widget.ConstraintLayout>